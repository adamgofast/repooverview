// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Master Container - TrueNorth
model TrueNorth {
  id          String   @id @default(cuid())
  name        String   @default("TrueNorth")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  owners      Owner[]

  @@map("truenorth")
}

// Universal Personhood - Owner
model Owner {
  id           String   @id @default(cuid())
  firebaseId   String   @unique
  email        String   @unique
  firstName    String?
  lastName     String?
  trueNorthId  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  trueNorth    TrueNorth @relation(fields: [trueNorthId], references: [id])
  projects     Project[]

  @@map("owners")
}

model Project {
  id              String   @id @default(cuid())
  name            String
  summary         String?
  projectType     String   // fullstack | frontend | backend | script | utility | experiment
  status          String   // green | yellow | red
  frontendRepoUrl String?
  backendRepoUrl  String?
  deploymentUrl   String?
  dbAttached      Boolean   @default(false)
  dbType          String?
  ownerId         String
  priority        Int       @default(3)
  tags            String    @default("[]")
  lastUpdatedAt   DateTime  @updatedAt
  createdAt       DateTime  @default(now())
  owner           Owner     @relation(fields: [ownerId], references: [id])
  details         ProjectDetail?

  @@map("projects")
}

model ProjectDetail {
  id            String    @id @default(cuid())
  projectId     String    @unique
  notes         String?
  openBugs      String    @default("[]")
  nextMilestones String   @default("[]")
  clientOwesMe  String?
  iOweClient    String?
  buildHistory  String    @default("[]")
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_details")
}

